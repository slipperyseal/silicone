<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Silicone Demo</display-name>

    <servlet>
        <servlet-name>silicone</servlet-name>
        <servlet-class>net.catchpole.silicone.servlet.SiliconeServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
        <init-param>
            <param-name>silicone-setup</param-name>
            <param-value>net.catchpole.airlines.AirlinesSetup</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>silicone</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/fonts/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>
</web-app>
